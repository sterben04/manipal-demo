{
  "database": "movies.db",
  "tables": [
    {
      "name": "movies",
      "description": "Core movie information including title, year, genre, director, and description",
      "columns": [
        {
          "name": "id",
          "type": "INTEGER",
          "description": "Unique identifier for each movie"
        },
        {
          "name": "title",
          "type": "TEXT",
          "description": "Movie title"
        },
        {
          "name": "year",
          "type": "INTEGER",
          "description": "Release year"
        },
        {
          "name": "genre",
          "type": "TEXT",
          "description": "Primary genre (e.g., Action, Drama, Sci-Fi, Crime, Thriller)"
        },
        {
          "name": "director",
          "type": "TEXT",
          "description": "Director name"
        },
        {
          "name": "runtime",
          "type": "INTEGER",
          "description": "Runtime in minutes"
        },
        {
          "name": "description",
          "type": "TEXT",
          "description": "Brief description or synopsis of the movie"
        }
      ]
    },
    {
      "name": "box_office",
      "description": "Financial performance data for movies",
      "columns": [
        {
          "name": "id",
          "type": "INTEGER",
          "description": "Unique identifier"
        },
        {
          "name": "movie_id",
          "type": "INTEGER",
          "description": "Foreign key to movies table"
        },
        {
          "name": "domestic_revenue",
          "type": "REAL",
          "description": "Domestic box office revenue (USD)",
          "unit": "millions",
          "example": "535.2 means $535.2 million"
        },
        {
          "name": "international_revenue",
          "type": "REAL",
          "description": "International box office revenue (USD)",
          "unit": "millions",
          "example": "469.8 means $469.8 million"
        },
        {
          "name": "total_revenue",
          "type": "REAL",
          "description": "Total worldwide box office revenue (USD)",
          "unit": "millions",
          "example": "1005.0 means $1,005 million or $1.005 billion"
        },
        {
          "name": "budget",
          "type": "REAL",
          "description": "Production budget (USD)",
          "unit": "millions",
          "example": "185.0 means $185 million"
        },
        {
          "name": "opening_weekend",
          "type": "REAL",
          "description": "Opening weekend revenue (USD)",
          "unit": "millions",
          "example": "158.4 means $158.4 million"
        }
      ]
    },
    {
      "name": "ratings",
      "description": "Movie ratings from various sources",
      "columns": [
        {
          "name": "id",
          "type": "INTEGER",
          "description": "Unique identifier"
        },
        {
          "name": "movie_id",
          "type": "INTEGER",
          "description": "Foreign key to movies table"
        },
        {
          "name": "imdb_rating",
          "type": "REAL",
          "description": "IMDb rating out of 10"
        },
        {
          "name": "rotten_tomatoes",
          "type": "INTEGER",
          "description": "Rotten Tomatoes score (percentage)"
        },
        {
          "name": "metacritic",
          "type": "INTEGER",
          "description": "Metacritic score out of 100"
        },
        {
          "name": "audience_score",
          "type": "INTEGER",
          "description": "Audience score (percentage)"
        }
      ]
    },
    {
      "name": "cast",
      "description": "Cast and crew members associated with movies",
      "columns": [
        {
          "name": "id",
          "type": "INTEGER",
          "description": "Unique identifier"
        },
        {
          "name": "movie_id",
          "type": "INTEGER",
          "description": "Foreign key to movies table"
        },
        {
          "name": "person_name",
          "type": "TEXT",
          "description": "Name of the person (actor, director, writer, etc.)"
        },
        {
          "name": "role_type",
          "type": "TEXT",
          "description": "Type of role (Actor, Director, Writer, Producer, etc.)"
        },
        {
          "name": "character_name",
          "type": "TEXT",
          "description": "Character name (for actors only)"
        }
      ]
    }
  ],
  "relationships": [
    {
      "from": "box_office.movie_id",
      "to": "movies.id",
      "type": "one-to-one",
      "description": "Each movie has exactly one box office record"
    },
    {
      "from": "ratings.movie_id",
      "to": "movies.id",
      "type": "one-to-one",
      "description": "Each movie has exactly one ratings record"
    },
    {
      "from": "cast.movie_id",
      "to": "movies.id",
      "type": "one-to-many",
      "description": "Each movie has multiple cast members (actors, directors, writers, etc.)"
    }
  ]
}
